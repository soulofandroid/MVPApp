<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <ImageView
        android:id="@+id/adapter_image"
        android:background="@drawable/ic_launcher_background"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/adapter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/adapter_image"
        android:text="张三" />

    <TextView
        android:id="@+id/adapter_age"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/adapter_name"
        android:text="25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/adapter_sex"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/adapter_age"
        android:text="男"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/adapter_address"
        android:text="北京市昌平区"
        android:layout_toRightOf="@+id/adapter_sex"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/adapter_des"
        android:layout_toRightOf="@+id/adapter_image"
        android:layout_below="@+id/adapter_name"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:text="数据萨沙卡凯撒萨克斯卡萨啥"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>